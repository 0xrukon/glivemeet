<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.rayzi.viewModel.PKLiveViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.otaliastudios.cameraview.CameraView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:cameraFacing="front"
                app:cameraGesturePinch="zoom"
                app:cameraGestureTap="autoFocus">

<!--                <com.munon.turboimageview.TurboImageView-->
<!--                    android:id="@+id/stickerTurbo"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    app:layout_anchor="@+id/constraintLayout"-->
<!--                    app:layout_anchorGravity="center"-->
<!--                    app:layout_drawOnPreview="true"-->
<!--                    app:layout_drawOnVideoSnapshot="true" />-->

            </com.otaliastudios.cameraview.CameraView>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/audioBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_bg_audioroom"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_black_trans"
                    android:visibility="gone" />

            </FrameLayout>

            <ImageView
                android:id="@+id/imgFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".3"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imgFilter2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".3"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layTop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/rl_golive"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:orientation="vertical">

                        <ScrollView
                            android:id="@+id/scrollViewTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/amidum"
                                    android:text="Select Room Image"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_11sdp" />

                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="130dp"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/bg_start_audio_room_select_image">

                                    <FrameLayout
                                        android:layout_width="110dp"
                                        android:layout_height="130dp"
                                        android:background="@android:color/transparent">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_gallery"
                                            app:tint="#80BCBCBC" />

                                        <ImageView
                                            android:id="@+id/imgProfile"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/transparent"
                                            android:scaleType="centerCrop" />

                                    </FrameLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:fontFamily="@font/amidum"
                                    android:text="Room Name"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_11sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bg_start_audio_room_select_image">

                                    <EditText
                                        android:id="@+id/etTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:fontFamily="@font/amidum"
                                        android:gravity="center_vertical"
                                        android:hint="Enter your room name"
                                        android:maxLength="30"
                                        android:paddingVertical="15dp"
                                        android:paddingStart="15dp"
                                        android:textColor="@color/white"
                                        android:textColorHint="#80BCBCBC"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:fontFamily="@font/amidum"
                                    android:text="Room Description"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_11sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bg_start_audio_room_select_image"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/etWelcomeMessage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/amidum"
                                        android:gravity="start"
                                        android:hint="Enter your room description"
                                        android:maxLength="100"
                                        android:paddingVertical="15dp"
                                        android:paddingStart="15dp"
                                        android:textColor="@color/white"
                                        android:textColorHint="#80BCBCBC"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:text="0/100"
                                        android:textColor="#BCBCBC"
                                        android:textSize="@dimen/_8sdp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:fontFamily="@font/amidum"
                                    android:text="Room Type"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_11sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:id="@+id/layPublic"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/bg_start_audio_room_select_image"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/ic_public" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginEnd="10dp"
                                            android:fontFamily="@font/amidum"
                                            android:text="Public"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13sdp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/layPrivate"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="@dimen/_15sdp"
                                        android:background="@drawable/bg_start_audio_room_select_image"
                                        android:backgroundTint="@android:color/transparent"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/ic_private" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginEnd="10dp"
                                            android:fontFamily="@font/amidum"
                                            android:text="Private"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13sdp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layPasscode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:fontFamily="@font/amidum"
                                        android:text="Private Room Passcode"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_11sdp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="8dp"
                                        android:background="@drawable/bg_start_audio_room_select_image"
                                        android:gravity="center">

                                        <EditText
                                            android:id="@+id/etPasscode"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:fontFamily="@font/amidum"
                                            android:gravity="center_vertical"
                                            android:hint="Enter your room name"
                                            android:maxLength="30"
                                            android:paddingVertical="15dp"
                                            android:paddingStart="15dp"
                                            android:textColor="@color/white"
                                            android:textColorHint="#80BCBCBC"
                                            android:textSize="@dimen/_13sdp" />

                                        <ImageView
                                            android:id="@+id/ivCopy"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:src="@drawable/ic_copy" />

                                        <ImageView
                                            android:id="@+id/ivShare"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginEnd="@dimen/_15sdp"
                                            android:src="@drawable/share" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_golive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/btnLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/btnPk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_gotolive_gradiant"
                                android:fontFamily="@font/abold"
                                android:paddingHorizontal="50dp"
                                android:paddingVertical="12dp"
                                android:text="Create Audio Room"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tab_tablayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/transparent"
                                app:tabGravity="center"
                                app:tabIndicator="@null"
                                app:tabIndicatorHeight="0dp"
                                app:tabMode="scrollable"
                                app:tabPaddingEnd="10dp"
                                app:tabPaddingStart="10dp"
                                app:tabRippleColor="@null" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnSwitchCamara"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"
                            android:src="@drawable/flip_camera_call_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/galleryBtn"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/bg_greadent_round"
                            android:padding="5dp"
                            android:src="@drawable/galary"
                            android:visibility="gone"
                            app:tint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <com.example.segmentedprogressbar.SegmentedProgressBar
                android:id="@+id/segments"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/segments"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="22dp"
                        android:background="@drawable/bg_greadent_round"
                        android:padding="8dp"
                        android:src="@drawable/ic_close"
                        android:visibility="gone"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/sound"
                        style="@style/TextOnShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="@string/sound_hint"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_baseline_music_note_24"
                        app:drawableTint="@android:color/white" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="15dp"
                android:gravity="end">

                <LinearLayout
                    android:id="@+id/lytReelFilterFunction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/flip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Flip"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/flip" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/flash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Flash"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_flash" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Speed"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_speed" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Filters"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_filter" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sticker_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Sticker"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/sticker"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_stickers" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/amidum"
                                android:text="Timer"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_timer" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytLiveFilterFunctions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/btnGifIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_filter" />

                    <ImageView
                        android:id="@+id/btnFilter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_effect" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#9013FE"
                        android:src="@drawable/ic_emoji_hist"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnSwitchCamaraFunction"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/flip" />

                    <ImageView
                        android:id="@+id/btnMute"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/unmute" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lytFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_sheettransperent"
                android:backgroundTint="@color/grayinsta"
                android:paddingTop="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgfilterclose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:onClick="@{()->viewModel.onClickSheetClose()}"
                    android:padding="7dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filters" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottom"
                    android:gravity="center"
                    android:orientation="vertical">

                    <info.hoang8f.android.segmented.SegmentedGroup
                        android:id="@+id/speeds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@id/filters"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:sc_border_width="2dp"
                        app:sc_checked_text_color="@android:color/white"
                        app:sc_corner_radius="10dp"
                        app:sc_tint_color="@color/purple"
                        tools:visibility="visible">

                        <RadioButton
                            android:id="@+id/speed05x"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-2x"
                            tools:ignore="HardcodedText" />

                        <RadioButton
                            android:id="@+id/speed075x"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-1.5x"
                            tools:ignore="HardcodedText" />

                        <RadioButton
                            android:id="@+id/speed1x"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1x"
                            tools:ignore="HardcodedText" />

                        <RadioButton
                            android:id="@+id/speed15x"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.5x"
                            tools:ignore="HardcodedText" />

                        <RadioButton
                            android:id="@+id/speed2x"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2x"
                            tools:ignore="HardcodedText" />

                    </info.hoang8f.android.segmented.SegmentedGroup>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toTopOf="@id/bottom"
                        tools:visibility="visible" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="20dp"
                    android:paddingBottom="75dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/upload"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_greadent_round"
                        android:padding="5dp"
                        android:src="@drawable/galary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/record"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/record"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@android:color/transparent"
                        android:padding="7dp"
                        android:src="@drawable/bg_record_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_pink"
                        android:backgroundTint="@color/light_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="3dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/record"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Preview"
                            android:textColor="@color/black_back" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_round_keyboard_arrow_right_24"
                            app:tint="@color/black_back" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/count"
                        style="@style/TextOnShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="100sp"
                        android:textStyle="bold"
                        tools:text="3" />

                    <TextView
                        style="@style/TextOnShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timer_hint"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_above="@id/bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_greadent_round"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"
                    app:tint="@color/white"
                    tools:visibility="visible" />

            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/live_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <include
            layout="@layout/partial_timer_sheet"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>